<% content_for :title, "Users" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="glow">Users</h1>
    <%= link_to "new user", new_user_path, class: "btn" %>
  </div>

  <div id="users" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render user %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row items-center space-x-2">
            <%#= link_to "Show", user, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%#= link_to "Edit", edit_user_path(user), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %> 
            <% if user != current_user %>
              <%= button_to user.active? ? "deactivate" : "activate", toggle_activate_user_path(user), method: :put, class: "muted-link cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
              <%= button_to "destroy", user, method: :delete, class: "muted-link alert cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No users found.</p>
    <% end %>
  </div>
</div>
