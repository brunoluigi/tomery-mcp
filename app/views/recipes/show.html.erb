<turbo-frame id="content">
  <%= render 'shared/dialogue_box', 
      text: "Here's the recipe for #{@recipe.title}:" %>
  
  <div class="space-y-6 mb-8">
    <div class="p-5 border border-[rgba(0,255,128,0.25)] rounded-lg bg-[rgba(0,32,16,0.3)]">
      <h2 class="text-2xl glow mb-4"><%= @recipe.title %></h2>
      
      <% if @recipe.description.present? %>
        <div class="mb-4">
          <h3 class="text-lg mb-2 opacity-80">Description</h3>
          <p class="opacity-70"><%= @recipe.description %></p>
        </div>
      <% end %>
      
      <% if @recipe.ingredients.present? %>
        <div class="mb-4">
          <h3 class="text-lg mb-2 opacity-80">Ingredients</h3>
          <div class="opacity-70 whitespace-pre-wrap"><%= @recipe.ingredients %></div>
        </div>
      <% end %>
      
      <% if @recipe.instructions.present? %>
        <div>
          <h3 class="text-lg mb-2 opacity-80">Instructions</h3>
          <div class="opacity-70 whitespace-pre-wrap"><%= @recipe.instructions %></div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="flex gap-4">
    <%= link_to "← Back to recipes", recipes_path, 
        data: { turbo_frame: "content" }, 
        class: "inline-block opacity-70 hover:opacity-100 transition-opacity no-underline" %>
    <%= link_to "← Back to menu", root_path, 
        data: { turbo_frame: "content" }, 
        class: "inline-block opacity-70 hover:opacity-100 transition-opacity no-underline" %>
  </div>
</turbo-frame>
