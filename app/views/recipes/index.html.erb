<% content_for :title, "Recipes" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Recipes</h1>
    <%#= link_to "New recipe", new_recipe_path, class: "btn" %>
  </div>

  <div id="recipes" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <div class="w-full sm:w-auto my-5 space-y-5">
            <%= modal_link_helper recipe.title, recipe_path(recipe), class: "muted-link glow" %>
          </div>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row items-center space-x-2">
            <%#= link_to "Edit", edit_recipe_path(recipe), class: "muted-link cursor-pointer" %>
            <%= button_to "Destroy", recipe, method: :delete, class: "muted-link alert cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No recipes found.</p>
    <% end %>
  </div>
</div>
